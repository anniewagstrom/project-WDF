  <!-- Short Paragraph -->
  <p>I am the founder of WaveStream Sports. I love fitness, web development, and creating interactive experiences for users!</p>

  <!-- Button to change background color -->
  <button id="colorBtn" style="padding: 10px 20px; margin-top: 10px; cursor: pointer;">Change Background Color</button>

  <!-- Link back to homepage -->
  <br><br>
  <a href="/" style="color: #2c3e50; font-weight: bold;">Back to Home</a>
</div>

<script>
  // --- Bouncing animation ---
  const img = document.getElementById("founder-img");
  let posX = 0, posY = 0;
  let dirX = 1, dirY = 1;
  const speed = 2;

  function bounceImg() {
    posX += speed * dirX;
    posY += speed * dirY;

    // Bounce at window edges
    if(posX <= 0 || posX >= window.innerWidth - img.width) dirX *= -1;
    if(posY <= 0 || posY >= window.innerHeight - img.height) dirY *= -1;

    img.style.left = posX + "px";
    img.style.top = posY + "px";

    requestAnimationFrame(bounceImg);
  }

  bounceImg();

  // --- Background color change ---
  const btn = document.getElementById("colorBtn");
  btn.addEventListener("click", () => {
    document.body.style.backgroundColor = "#" + Math.floor(Math.random()*16777215).toString(16);
  });
</script>
