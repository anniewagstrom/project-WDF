<h1 id="rubric-title" style="cursor:pointer; color:#2c3e50; text-align:center;">About WaveStream Sports</h1>

<div id="founder-container"> 
  <!-- Founder Image with Glow -->
  <img src="/img/codeselfie.png" id="founder-img" alt="Founder"
       style="width:150px; border-radius:10px; display:block; margin: 40px auto 20px;
              box-shadow: 0 0 20px rgba(0, 150, 255, 0.6);">

  <!-- Founder Name -->
  <h2>Annie Wågström</h2>

  <!-- Short Paragraph -->
  <div id="about-box">
    <p>is the founder behind WaveStream Sports, 
    driven by a deep passion for health and fitness. 
    The concept of wearing stylish, functional sportswear boosts 
    confidence and motivates people to stay active and pursue their goals. 
    The mission is to create products and experiences that inspire and empower
    everyone to feel their best every day.
    </p>
  </div>

  <!-- Button to change background color -->
  <button id="colorBtn">Change Background Color</button>
</div>

<script>
  // --- Pulsating animation ---
  const img = document.getElementById("founder-img");
  let scaleAngle = 0;
  const scaleRange = 0.08;
  const scaleSpeed = 0.02;

  function pulsate() {
    scaleAngle += scaleSpeed;
    const scale = 1 + Math.sin(scaleAngle) * scaleRange;
    img.style.transform = `scale(${scale})`;
    requestAnimationFrame(pulsate);
  }
  pulsate();

  // --- Background color change (nude/pastel palette) ---
  const btn = document.getElementById("colorBtn");
  const pastelColors = [
    "#f7ede2", // beige
    "#f5e1da", // light pink
    "#dbe7f1", // baby blue
    "#e8d6c8", // soft brown
    "#fde2e4", // pinkish
    "#e0f7fa"  // light cyan
  ];

  btn.addEventListener("click", () => {
    const randomColor = pastelColors[Math.floor(Math.random() * pastelColors.length)];
    document.body.style.backgroundColor = randomColor;
  });

  // --- Rubric click goes back home ---
  const rubric = document.getElementById("rubric-title");
  rubric.addEventListener("click", () => {
    window.location.href = "/";
  });
</script>
